{
  "framework": "nextjs",
  "regions": ["fra1"],

  "build": {
    "env": {
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
    }
  },

  "env": {
    "ALLOW_MOCK_A11Y": "false",
    "A11Y_TIMEOUT_MS": "45000",
    "NEXT_TELEMETRY_DISABLED": "1"
  },

  "functions": {
    "src/app/api/scan*/route.*": {
      "maxDuration": 60,
      "memory": 2048
    },
    "app/api/scan*/route.*": {
      "maxDuration": 60,
      "memory": 2048
    }
  }
}
