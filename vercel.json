  "build": {
    "env": {
      "NEXT_PHASE": "next-build",
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
