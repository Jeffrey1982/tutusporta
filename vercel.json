{
  "framework": "nextjs",
  "regions": ["fra1"],

  "build": {
    "env": {
      "PLAYWRIGHT_BROWSERS_PATH": "0",
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "0"
    }
  },

  "env": {
    "ALLOW_MOCK_A11Y": "false",
    "A11Y_TIMEOUT_MS": "45000",
    "NEXT_TELEMETRY_DISABLED": "1"
  },

  "functions": {
    "src/app/api/**/route.*": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "node_modules/@playwright*/**"
    },
    "app/api/**/route.*": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "node_modules/@playwright*/**"
    }
  }
}
